<!-- base.layout.tmpl -->
{{template "base" .}}

<!-- defining home.page.tmpl content -->
{{define "content"}}

<!-- Page header -->
<div class="container-fluid bg-light">
    <div class="row">
        <div class="col">
            <h1 class="display-5">Meal Recipies</h1>
        </div>
    </div>
</div><!-- END of header -->

<!-- Line on page -->
<div class="border"></div>

<div class="container-fluid">
    <div class="row">
        <div class="col">

            
            <div class="mt-5">Search page</div>

            <hr>

            <!-- form -->
            <form action="/search" method="get" class="" novalidate>
                <input type="hidden" name="">

                <div class="form-group mt-3">
                    <label for="url_of_api">URL of API</label>
                        <input type="text" class="form-control" id="url_of_api" name="url_of_api" aria-describedby="urlhelp" >
                        <small id="urlhelp" class="form-text text-muted">Term to search for</small>
                </div>

                <br>
                <button type="submit" class="btn btn-primary" value="Insert Json">Submit</button>
            </form>
            <!-- end for form -->

        </div>
    </div>

</div>
{{end}}